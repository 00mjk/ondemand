<%= bootstrap_form_for(@product, as: :product, url: form_url) do |f| %>
    <%= render partial: "form_directory", locals: { f: f } if @product.new_record? %>
    <%= render partial: "form_git", locals: { f: f, product: @product} if (@product.new_record? || @product.git_repo?) %>
    <div class="actions">
      <%= f.submit 'Submit' %>
    </div>
<% end %>
