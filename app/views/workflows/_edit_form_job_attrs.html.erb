<% if Workflow.show_job_arrays? %>
<%= f.text_field :job_array_request, label: 'Job array specification', help: Workflow.not_all_clusters_support_job_arrays ? "Job arrays are optional. Note that not all clusters support job arrays." : "Job arrays are optional." %>
<% end %>