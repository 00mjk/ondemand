<%= bootstrap_form_for(@template) do |f| %>
  <% if @template.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@template.errors.count, "error") %> prohibited this template from being saved:</h2>

      <ul>
      <% @template.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="field">
        <%= f.text_field :path, label: "Path (the template will be created by copying files from this source path)" %>
      </div>
      <div>
        <p class="small">&bull; If left blank, a default job script will be added to your new template.</p>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="field">
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.select :host, Servers.map { |key, val| [ "#{key.titleize} (#{val[:pbshost]})", key ] }, { selected: @template.host, label: "Default Batch Server" }, { class: "selectpicker" } %>
      </div>
      <div class="field">
        <%= f.text_area :notes %>
      </div>
      <div class="actions">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", :osc_jobs, :class => "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
