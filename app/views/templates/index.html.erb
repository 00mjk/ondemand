<div class="container">

  <div class="page-header" xmlns="http://www.w3.org/1999/html">
    <h3>Listing templates</h3>
  </div>

  <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add a New Template'.html_safe, new_template_path, :class => "btn btn-default" %>

  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Host</th>
      <th>Path</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @templates.each do |template| %>
        <tr>
          <td><%= template.name %></td>
          <td><%= template.notes %></td>
          <td><%= template.host.titleize unless template.host.nil? %></td>
          <td><pre><%= template.path %></pre></td>
          <% if template.writable? %>
              <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit Dir'.html_safe, Filesystem.new.fs(template.path), target: '_blank', class: 'btn btn-primary' %></td>
          <% else %>
              <td><%= link_to '<span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> View Dir'.html_safe, Filesystem.new.fs(template.path), target: '_blank', class: 'btn btn-default' %></td>
          <% end %>

        </tr>
    <% end %>
    </tbody>
  </table>
</div>








