<%= bootstrap_form_for(@session_context) do |f| %>
  <% f.object.each do |attrib| %>
    <%= create_widget(f, attrib, format: @render_format) %>
  <% end %>

  <%= f.submit "Launch", class: "btn btn-primary btn-block" %>
<% end %>

<% if @app.custom_javascript? %>
  <%= javascript_tag "(function(){\n#{@app.custom_javascript}\n}());" %>
<% end %>
