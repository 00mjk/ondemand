<h2>Active Jobs</h2>
    <div class="col-md-12">
        <table class="table datatable display">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>User</th>
                    <th>Status</th>
                    <th>Cluster</th>
                </tr>
            </thead>
            <tbody>
                <% @activejobs.each_with_index do |activejob, i| %>
                    <tr class="job_row" id="job_row_<%= i %>">
                        <td class="small"><%= activejob[:name] %></td>
                        <td class="small" style="word-break:break-all;" ><%= sanitize(activejob[:attribs][:Job_Name]) %></td>
                        <td class="small"><%= username(activejob[:attribs][:Job_Owner]) %></td>
                        <td class="small"><%= status_label(activejob[:attribs][:job_state]) %></td>
                        <td class="small"><%= hostname(activejob[:attribs][:submit_host]) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<br>