<% if @user.project_space_paths.empty? %>
  <li><a href="<%= OodAppkit.files.url(path: @user.home) %>" target="_blank">Files</a></li>
<% else %>
  <li class="dropdown"> <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Files<span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><a href="<%= OodAppkit.files.url(path: @user.home) %>" target="_blank"><i class="fa fa-home"></i> Home Directory</a></a></li>
      <li role="separator" class="divider"></li>
      <% @user.project_space_paths.each do |path| %>
        <li><a href="<%= OodAppkit.files.url(path: path) %>" target="_blank"><i class="fa fa-folder"></i> <%= path.to_s %></a></li>
      <% end %>
    </ul>
  </li>
<% end %>
