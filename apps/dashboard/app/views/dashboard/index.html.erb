<script id="jobs-template" type="text/x-handlebars-template">
  <div class="well">
  <h4>{{title}}</h4>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>User</th>
        <th>Job ID</th>
        <th>Cluster/Resource</th>
        <th>Start</th>
        <th>End</th>
        <th>Walltime Used</th>
        <th>CPU</th>
      </tr>
    </thead>
    <tbody>
      {{#each results}}
      <tr>
        <td>{{name}}</td>
        <td>{{local_job_id}}</td>
        <td>{{resource}}</td>
        <td>{{start_time}}</td>
        <td>{{end_time}}</td>
        <td>{{walltime}}</td>
        <td>{{cpu_user}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</script>


