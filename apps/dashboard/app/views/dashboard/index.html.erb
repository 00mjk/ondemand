  <%# render @motd if @motd %>
  <div class="row">
    <div class="col-md-8">
      <%# This assumes @motd_file responds to `to_partial_path` %>
      <%= render @motd if @motd %>
    </div>
    <div class="col-md-4">
      <div class="xdmod">
        <%= render "xdmod_widget_jobs" %>
        <%= render "xdmod_widget_perf" %>
        <%= render "xdmod_widget_summarycharts" %>
      </div>
    </div>
  </div>
<% else %>
  <%= render @motd if @motd %>
<% end %>
