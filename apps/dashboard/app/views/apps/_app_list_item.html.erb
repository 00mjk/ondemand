<% app.links.each do |link| %>
  <%=
    link_to(
      link.url.to_s,
      class: "list-group-item",
      title: link.title,
      data: {
        toggle: "popover",
        content: manifest_markdown(link.description),
        html: true,
        trigger: "hover",
        container: "body"
      },
      target: link.new_tab? ? "_blank" : nil
    ) do
  %>
    <%= icon_tag(link.icon_uri) %> <%= link.title %>
  <% end %>
<% end %>
